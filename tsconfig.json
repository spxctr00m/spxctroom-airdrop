{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "chai", "mocha", "@nomicfoundation/hardhat-chai-matchers"]

  },
  "include": ["scripts", "test", "typechain-types"]
}
